<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >
        
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="No."
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="@android:color/black" />
	        
	        <TextView
		        android:id="@+id/list_quest_id"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="000"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="@android:color/black" />
	        	        
		    <TextView
		        android:id="@+id/list_quest_name"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="10dp"
		        android:text="Unknown"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="@android:color/black" />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="受注場所: "
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@android:color/darker_gray"
	            android:textSize="12sp" />
	        
	        <TextView
	            android:id="@+id/list_quest_area"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="Unknown"
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="10dp"
	            android:text="名声: "
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@android:color/darker_gray"
	            android:textSize="12sp" />
	        
	        <TextView
	            android:id="@+id/list_quest_fame"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="Unknown"
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/list_quest_hire"
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
        </LinearLayout>
        
        <LinearLayout 
	        android:id="@+id/list_quest_rehire"
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
        </LinearLayout>
        
	    <LinearLayout 
	        android:id="@+id/list_quest_prov"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent">
	        
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="出現条件: "
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
	            android:id="@+id/list_quest_prov_text"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
	            android:layout_marginLeft="5dp"
		        android:text="Unknown"
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	    </LinearLayout>
        
        <LinearLayout 
	        android:id="@+id/list_quest_flow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:orientation="vertical" >
		</LinearLayout>
    </LinearLayout>

    
</RelativeLayout>
