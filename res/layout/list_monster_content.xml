<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/list_monster_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/list_main_menu_accessibility"
        android:src="@drawable/ic_launcher" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/list_monster_image"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true" >
        
	    <TextView
	        android:id="@+id/list_monster_name"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="Unknown"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@android:color/black" />
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	        
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="HP: "
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
	            android:id="@+id/list_monster_hp"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="Unknown"
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="10dp"
		        android:text="Exp: "
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
	            android:id="@+id/list_monster_exp"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="Unknown"
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="10dp"
		        android:text="G: "
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
	            android:id="@+id/list_monster_gold"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="Unknown"
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="通常: "
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
	            android:id="@+id/list_monster_common"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="Unknown"
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="10dp"
		        android:text="レア: "
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
	        
	        <TextView
	            android:id="@+id/list_monster_rare"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="Unknown"
		        android:textSize="12sp"
	        	android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

    
</RelativeLayout>
